{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    /* Vite bundler setup */
    "moduleResolution": "bundler",
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react-jsx",
    "noEmit": true,

    /* Editor & tooling strictness */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
